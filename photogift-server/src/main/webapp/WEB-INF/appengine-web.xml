<?xml version="1.0" encoding="utf-8"?>
<!--https://developers.google.com/appengine/docs/java/config/appconfig?hl=fr-->
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://appengine.google.com/ns/1.0 appengine-web.xsd">
    <application>photo-gift</application>
    <version>1</version>
    <threadsafe>true</threadsafe>

    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties" />
    </system-properties>

    <!-- Enable HTTP sessions -->
    <sessions-enabled>true</sessions-enabled>

    <!--<async-session-persistence enabled="true" />-->

</appengine-web-app>